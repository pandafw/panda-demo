<?xml version="1.0" encoding="UTF-8"?>
<web-app id="panda-demo" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>panda-demo</display-name>

	<description>Panda Demo Web</description>

	<distributable />
	
	<!-- Application Class -->
	<context-param>
		<param-name>ApplicationClass</param-name>
		<param-value>panda.demo.Application</param-value>
	</context-param>

	<!-- Freemarker Template Path -->
	<context-param>
		<param-name>TemplatePath</param-name>
		<param-value>
			bean://panda.exts.freemarker.StaticDelegateTemplateLoader
			web://
			class://
		</param-value>
	</context-param>

	<!-- listener -->
	<listener>
		<listener-class>panda.aems.ServletListener</listener-class>
	</listener>

	<!-- filter -->
	<filter>
		<filter-name>encoding-filter</filter-name>
		<filter-class>panda.servlet.filters.RequestEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!-- debug start -->
	<filter>
		<filter-name>dump-filter</filter-name>
		<filter-class>panda.servlet.filters.RequestDumpFilter</filter-class>
		<init-param>
			<param-name>dumpRequest</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>dumpResponse</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>dumpPath</param-name>
			<param-value>web://WEB-INF/_dump</param-value>
		</init-param>
	</filter>
	<!-- debug end -->
	<filter>
		<filter-name>logging-filter</filter-name>
		<filter-class>panda.servlet.filters.RequestLoggingFilter</filter-class>
		<init-param>
			<param-name>accessLogName</param-name>
			<param-value>access</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>panda-prepare</filter-name>
		<filter-class>panda.exts.struts2.filter.PandaPrepareFilter</filter-class>
	</filter>
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>panda.exts.struts2.sitemesh.FreeMarkerPageFilter</filter-class>
		<init-param>
			<param-name>passParamName</param-name>
			<param-value>__decorator</param-value>
		</init-param>
		<init-param>
			<param-name>passParamValue</param-name>
			<param-value>none</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>panda-execute</filter-name>
		<filter-class>panda.exts.struts2.filter.PandaExecuteFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>encoding-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- debug start -->
	<filter-mapping>
		<filter-name>dump-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- debug end -->
	<filter-mapping>
		<filter-name>logging-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>panda-prepare</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>panda-execute</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- servlet -->
	<servlet>
		<servlet-name>JspSupportServlet</servlet-name>
		<servlet-class>org.apache.struts2.views.JspSupportServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>freemarker-servlet</servlet-name>
		<servlet-class>panda.exts.struts2.servlet.FreemarkerServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>freemarker-servlet</servlet-name>
		<url-pattern>*.ftl</url-pattern>
	</servlet-mapping>

	<!-- error-page -->
	<error-page>
		<error-code>403</error-code>
		<location>/panda/exts/struts2/views/servlet-error.ftl</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/panda/exts/struts2/views/servlet-error.ftl</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/panda/exts/struts2/views/servlet-error.ftl</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/panda/exts/struts2/views/servlet-error.ftl</location>
	</error-page>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>jdbc connection</description>
		<res-ref-name>jdbc/pdemo</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

