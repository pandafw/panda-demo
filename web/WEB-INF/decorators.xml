<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/_*</pattern>
		<pattern>/google*</pattern>
		<pattern>/attachment/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/scripts/*</pattern>
		<pattern>/static/*</pattern>
		<pattern>/struts/*</pattern>
		<pattern>/styles/*</pattern>
		<pattern>/themes/*</pattern>
		<pattern>/task/*</pattern>
	</excludes>

	<decorator name="__inner" page="/panda/exts/struts2/decorators/inner.ftl"/>

	<decorator name="__popup" page="/panda/exts/struts2/decorators/popup.ftl"/>

	<decorator name="__print" page="/panda/exts/struts2/decorators/print.ftl"/>

	<decorator name="__pdf" page="/panda/exts/struts2/decorators/pdf.ftl"/>

	<decorator name="print" page="/panda/exts/struts2/decorators/print.ftl">
		<pattern>/*_print</pattern>
	</decorator>

	<decorator name="popup" page="/panda/exts/struts2/decorators/popup.ftl">
		<pattern>/*_popup</pattern>
	</decorator>

	<decorator name="main" page="main.ftl">
		<pattern>/*</pattern>
	</decorator>

</decorators>
