<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/_*</pattern>
		<pattern>/google*</pattern>
		<pattern>/attachment/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/scripts/*</pattern>
		<pattern>/static/*</pattern>
		<pattern>/struts/*</pattern>
		<pattern>/styles/*</pattern>
		<pattern>/themes/*</pattern>
		<pattern>/task/*</pattern>
	</excludes>

	<decorator name="__inner" page="inner.ftl"/>

	<decorator name="__popup" page="popup.ftl"/>

	<decorator name="__print" page="print.ftl"/>

	<decorator name="__pdf" page="pdf.ftl"/>

	<decorator name="print" page="print.ftl">
		<pattern>/*_print</pattern>
	</decorator>

	<decorator name="popup" page="popup.ftl">
		<pattern>/*_popup</pattern>
	</decorator>

	<decorator name="main" page="main.ftl">
		<pattern>/*</pattern>
	</decorator>

</decorators>
