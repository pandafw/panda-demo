<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<system.webServer>
		<security>
			<requestFiltering allowDoubleEscaping="True" />
		</security>
		<handlers>
			<remove name="httpPlatformHandlerMain" />
			<add name="httpPlatformHandlerMain" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
		</handlers>
		<httpPlatform processPath="D:\Program Files (x86)\apache-tomcat-7.0.81\bin\startup.bat"
			arguments="-config D:\home\site\wwwroot\server.xml start"
			startupTimeLimit="120" requestTimeout="00:04:00" stdoutLogEnabled="true"
			startupRetryCount="0">
			<environmentVariables>
				<environmentVariable name="CATALINA_OPTS"
					value="-Xms384m -Xmx384m -XX:-CreateMinidumpOnCrash -Dport.http=%HTTP_PLATFORM_PORT% -Dsite.logdir=d:/home/site/logs -Dsite.tempdir=d:/home/site/temp" />
			</environmentVariables>
		</httpPlatform>
	</system.webServer>
</configuration>
