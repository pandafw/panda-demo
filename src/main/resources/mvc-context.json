{
	// static base
	"panda.ui.static.base": "/static",

	// default resources
	"panda.resources.default": [ "panda.demo.AppEngine", "panda.demo.Application", "panda.wing.App", "panda.mvc.Resource" ],

	// allowed locales
	"panda.locale.allowed": [ "en", "ja", "zh" ],

	// default locale
	"panda.locale.default": "en",

	// default use DaoFilePool (save upload to database)
	//"panda.filepool.local.path": "/tmp/upload,"

	// default panda.multipart.body.size.max
	//"panda.multipart.body.size.max": 2097152,

	// default panda.multipart.file.size.max
	//"panda.multipart.file.size.max": 2097152,

	// context path
	"super_context": "/super",
	"admin_context": "/admin",

	// cron
	"panda.crons": [{
		"url": "/task/filecleanup/start",
		"description": "Execute every 30 minutes to remove the upload temporary files",
		"cron": "0 */30 * * * *"
	}],

	// sitemesh
	"panda.sitemesh" : {
		"excludes": [],

		"decorators": [{
				"head": "__mesh=false"
			}, {
				"para": "__mesh=false"
			}, {
				"para": "__inner=true",
				"page": "/sitemesh/inner.ftl"
			}, {
				"para": "__pdf=true",
				"page": "/sitemesh/pdf.ftl"
			}, {
				"para": "__print=true",
				"page": "/sitemesh/print.ftl"
			}, {
				"para": "__popup=true",
				"page": "/sitemesh/popup.ftl"
			}, {
				"path": "/.*[/_]pdf",
				"page": "/sitemesh/pdf.ftl"
			}, {
				"path": "/.*[/_]print",
				"page": "/sitemesh/print.ftl"
			}, {
				"path": "/.*[/_]popup",
				"page": "/sitemesh/popup.ftl"
			}, {
				"path": "/.*",
				"page": "/sitemesh/main.ftl"
			}
		]
	}
}
