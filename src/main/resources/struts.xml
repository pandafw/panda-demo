<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.action.excludePattern" value="/_.*"/>
	<constant name="struts.action.extension" value=""/>
	<constant name="struts.configuration.xml.reload" value="false"/>
	<constant name="struts.custom.i18n.resources" value="panda.exts.struts2.Resource,panda.gae.struts2.GaeResource,panda.aems.ServletApplet,panda.demo.Application,appengine"/>
	<constant name="struts.devMode" value="false"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="false"/>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.i18n.reload" value="false"/>
	<constant name="struts.locale" value="ja"/>
	<constant name="struts.mapper.action.prefix.enabled" value="true"/>
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
	<constant name="struts.serve.static" value="true"/>
	<constant name="struts.serve.static.browserCache" value="true"/>
	<constant name="struts.ui.theme" value="simple"/>
	<constant name="struts.ui.templateDir" value="template"/>
	<constant name="struts.ui.templateSuffix" value="java"/>

	<constant name="panda.package.default" value="struts-app-default"/>
	<constant name="panda.action.support" value="panda.demo.action.SuccessAction"/>
	<constant name="panda.action.assist" value="panda.demo.action.ActionAssist"/>
	<constant name="panda.action.consts" value="panda.demo.action.ActionConsts"/>
	<constant name="panda.fonts.path" value="web://WEB-INF/fonts"/>
	<constant name="panda.locale.valid" value="ja,zh"/>
	<constant name="panda.datepicker.defaults" value="{ changeMonth: true, changeYear: true, showOn: 'both', buttonText: '' }"/>
	<constant name="panda.timepicker.defaults" value="{ showOn: 'both', buttonText: '' }"/>
	<constant name="panda.datetimepicker.defaults" value="{ changeMonth: true, changeYear: true, showOn: 'both', buttonText: '' }"/>
	<constant name="panda.multipart.maxSize" value="3145728"/>
	<constant name="panda.url.encode" value="false"/>
<!--<constant name="panda.url.escapeAmp" value="false"/>-->
	<constant name="panda.url.includeParams" value="none"/>


	<include file="panda/demo/struts/struts-app-default.xml"/>
	<include file="panda/demo/struts/struts-app-root.xml"/>
	<include file="panda/demo/struts/struts-app-images.xml"/>
	<include file="panda/demo/struts/struts-app-task.xml"/>
	<include file="panda/demo/struts/struts-app-rest.xml"/>
</struts>
