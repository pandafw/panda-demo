<struts>
	<constant name="struts.action.excludePattern" value="/_.*"/>
	<constant name="struts.action.extension" value=""/>
	<constant name="struts.configuration.xml.reload" value="false"/>
	<constant name="struts.custom.i18n.resources" value="nuts.exts.struts2.NutsResource,nuts.gae.struts2.GaeResource,nuts.demo.Application"/>
	<constant name="struts.devMode" value="false"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="false"/>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.i18n.reload" value="false"/>
	<constant name="struts.locale" value="ja"/>
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
	<constant name="struts.serve.static" value="true"/>
	<constant name="struts.serve.static.browserCache" value="true"/>
	<constant name="struts.ui.theme" value="simple"/>
	<constant name="struts.ui.templateDir" value="template"/>
	<constant name="struts.ui.templateSuffix" value="java"/>

	<constant name="nuts.package.default" value="struts-app-default"/>
	<constant name="nuts.action.support" value="nuts.demo.action.SuccessAction"/>
	<constant name="nuts.action.utils" value="nuts.demo.util.ActionUtils"/>
	<constant name="nuts.action.consts" value="nuts.demo.util.ActionConsts"/>
	<constant name="nuts.fonts.path" value="web://WEB-INF/fonts"/>
	<constant name="nuts.locale.valid" value="ja,zh"/>
	<constant name="nuts.datepicker.defaults" value="{ changeMonth: true, changeYear: true, showOn: 'both', buttonText: '' }"/>
	<constant name="nuts.timepicker.defaults" value="{ showOn: 'both', buttonText: '' }"/>
	<constant name="nuts.datetimepicker.defaults" value="{ changeMonth: true, changeYear: true, showOn: 'both', buttonText: '' }"/>
	<constant name="nuts.multipart.maxSize" value="3145728"/>
	<constant name="nuts.url.encode" value="false"/>
<!--<constant name="nuts.url.escapeAmp" value="false"/>-->
	<constant name="nuts.url.includeParams" value="none"/>


	<include file="nuts/demo/struts/struts-app-default.xml"/>
	<include file="nuts/demo/struts/struts-app-root.xml"/>
	<include file="nuts/demo/struts/struts-app-images.xml"/>
	<include file="nuts/demo/struts/struts-app-task.xml"/>
	<include file="nuts/demo/struts/struts-app-rest.xml"/>
</struts>
