<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="struts-app-default" abstract="true" extends="panda-default">
		<interceptors>
			<interceptor-stack name="public" >
				<interceptor-ref name="pandaPrepStack"/>
				<interceptor-ref name="pandaWorkStack"/>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="public"/>

		<global-results>
			<result name="json" type="json"></result>
			<result name="xml" type="xml"></result>
			<result name="error" type="freemarker">/panda/exts/struts2/views/error.ftl</result>
			<result name="input" type="freemarker">/panda/exts/struts2/views/error.ftl</result>
			<result name="exception" type="exception"></result>
			<result name="login" type="redirectAction">
				<param name="__inner">%{#parameters.__inner}</param>
				<param name="actionName">login_input</param>
				<param name="namespace">/user</param>
				<param name="redirect">%{redirect}</param>
				<param name="supressEmptyParameters">true</param>
			</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping result="exception" exception="java.lang.Throwable"/>
		</global-exception-mappings>

		<action name="*.ftl" class="panda.exts.struts2.actions.FreemarkerAction">
			<result name="success" type="freemarker">${location}</result>
		</action>
	</package>
</struts>
