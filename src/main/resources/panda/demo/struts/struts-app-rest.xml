<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="struts-app-json" namespace="/json" extends="struts-app-default">
		<global-results>
			<result name="exception" type="json"></result>
			<result name="error" type="json"></result>
			<result name="input" type="json"></result>
			<result name="success" type="json">query, pager, sorter, data, dataList</result>
		</global-results>

		<action name="sampledate_*" class="panda.demo.action.sampledate.SampleDateAction" method="{1}"/>
		<action name="samplefile_*" class="panda.demo.action.samplefile.SampleFileExAction" method="{1}"/>
		<action name="samplejoin_*" class="panda.demo.action.samplejoin.SampleJoinAction" method="{1}"/>
		<action name="sampletags_*" class="panda.demo.action.sampletags.SampleTagsAction" method="{1}"/>
		<action name="sampleunique_*" class="panda.demo.action.sampleunique.SampleUniqueAction" method="{1}"/>
		
		<action name="ognleval" class="panda.exts.struts2.actions.OgnlEvaluateAction">
			<result name="input" type="json">expr, value</result>
			<result name="success" type="json">expr, value</result>
		</action>

		<action name="sqlexec" class="panda.exts.struts2.actions.SqlExecuteAction">
			<result name="input" type="json">sql, ignoreError, fetchLimit</result>
			<result name="success" type="json">results</result>
		</action>
	</package>

	<package name="struts-app-xml" namespace="/xml" extends="struts-app-default">
		<global-results>
			<result name="exception" type="xml"></result>
			<result name="error" type="xml"></result>
			<result name="input" type="xml"></result>
			<result name="success" type="xml">filters, pager, sorter, data, dataList</result>
		</global-results>

		<action name="sampledate_*" class="panda.demo.action.sampledate.SampleDateAction" method="{1}"/>
		<action name="samplefile_*" class="panda.demo.action.samplefile.SampleFileAction" method="{1}"/>
		<action name="samplejoin_*" class="panda.demo.action.samplejoin.SampleJoinAction" method="{1}"/>
		<action name="sampletags_*" class="panda.demo.action.sampletags.SampleTagsAction" method="{1}"/>
		<action name="sampleunique_*" class="panda.demo.action.sampleunique.SampleUniqueAction" method="{1}"/>
		
		<action name="ognleval" class="panda.exts.struts2.actions.OgnlEvaluateAction">
			<result name="input" type="xml">expr, value</result>
			<result name="success" type="xml">expr, value</result>
		</action>

		<action name="sqlexec" class="panda.exts.struts2.actions.SqlExecuteAction">
			<result name="input" type="xml">sql, ignoreError, fetchLimit</result>
			<result name="success" type="xml">results</result>
		</action>
	</package>
</struts>
