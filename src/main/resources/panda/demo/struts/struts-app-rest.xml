<struts>
	<package name="struts-app-json" namespace="/json" extends="struts-app-default">
		<global-results>
			<result name="exception" type="json"></result>
			<result name="error" type="json"></result>
			<result name="input" type="json"></result>
			<result name="success" type="json">query, pager, sorter, data, dataList</result>
		</global-results>

		<action name="sampledate_*" class="nuts.demo.action.sampledate.SampleDateAction" method="{1}"/>
		<action name="samplefile_*" class="nuts.demo.action.sample.SampleFileExAction" method="{1}"/>
		<action name="samplejoin_*" class="nuts.demo.action.samplejoin.SampleJoinAction" method="{1}"/>
		<action name="sampletags_*" class="nuts.demo.action.sampletags.SampleTagsAction" method="{1}"/>
		<action name="sampleunique_*" class="nuts.demo.action.sampleunique.SampleUniqueAction" method="{1}"/>
		
		<action name="ognleval" class="nuts.aems.action.tools.OgnlEvaluateAction">
			<result name="input" type="json">expr, value</result>
			<result name="success" type="json">expr, value</result>
		</action>

		<action name="sqlexec" class="nuts.aems.action.tools.SqlExecuteAction">
			<result name="input" type="json">sql, ignoreError, fetchLimit</result>
			<result name="success" type="json">results</result>
		</action>
	</package>

	<package name="struts-app-xml" namespace="/xml" extends="struts-app-default">
		<global-results>
			<result name="exception" type="xml"></result>
			<result name="error" type="xml"></result>
			<result name="input" type="xml"></result>
			<result name="success" type="xml">filters, pager, sorter, data, dataList</result>
		</global-results>

		<action name="sampledate_*" class="nuts.demo.action.sampledate.SampleDateAction" method="{1}"/>
		<action name="samplefile_*" class="nuts.demo.action.sample.SampleFileExAction" method="{1}"/>
		<action name="samplejoin_*" class="nuts.demo.action.samplejoin.SampleJoinAction" method="{1}"/>
		<action name="sampletags_*" class="nuts.demo.action.sampletags.SampleTagsAction" method="{1}"/>
		<action name="sampleunique_*" class="nuts.demo.action.sampleunique.SampleUniqueAction" method="{1}"/>
		
		<action name="ognleval" class="nuts.aems.action.tools.OgnlEvaluateAction">
			<result name="input" type="xml">expr, value</result>
			<result name="success" type="xml">expr, value</result>
		</action>

		<action name="sqlexec" class="nuts.aems.action.tools.SqlExecuteAction">
			<result name="input" type="xml">sql, ignoreError, fetchLimit</result>
			<result name="success" type="xml">results</result>
		</action>
	</package>
</struts>
