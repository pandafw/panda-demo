<struts>
	<package name="struts-app-images" namespace="/images" extends="struts-app-default">
		<global-results>
			<result name="noimg" type="redirect">
				<param name="location">/images/no-img.jpg</param>
				<param name="parse">false</param>
			</result>
			<result name="redirect" type="redirect">
				<param name="location">${imageUrl}</param>
			</result>
		</global-results>

		<action name="fu" class="nuts.exts.struts2.actions.FileServeAction" method="upload">
			<result name="input" type="json">file</result>
			<result name="success" type="json">file</result>
			<result name="exception" type="json"/>
		</action>
		<action name="fd" class="nuts.exts.struts2.actions.FileServeAction" method="download">
			<result name="input" type="json">file</result>
			<result name="success" type="json">file</result>
			<result name="exception" type="json"/>
		</action>
		<action name="iu" class="nuts.exts.struts2.actions.ImageServeAction" method="upload">
			<result name="input" type="json">image</result>
			<result name="success" type="json">image</result>
			<result name="exception" type="json"/>
		</action>
		<action name="id" class="nuts.exts.struts2.actions.ImageServeAction" method="download">
			<result name="input" type="json">image</result>
			<result name="success" type="json">image</result>
			<result name="exception" type="json"/>
		</action>
		<action name="si" class="nuts.demo.action.images.SampleFileImageAction"/>
		<action name="sf" class="nuts.demo.action.images.SampleFileFileAction"/>
	</package>
</struts>
