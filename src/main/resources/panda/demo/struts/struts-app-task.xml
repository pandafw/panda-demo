<struts>
	<package name="struts-app-task" namespace="/task" extends="struts-app-default">
		<global-results>
			<result name="exception" type="xml"></result>
			<result name="error" type="xml"></result>
			<result name="input" type="xml"></result>
			<result name="success" type="xml"></result>
		</global-results>

		<action name="ping" class="nuts.exts.struts2.actions.PingAction"/>
		<action name="filecleanup" class="nuts.exts.struts2.actions.FileCleanupAction"/>
	</package>
</struts>
