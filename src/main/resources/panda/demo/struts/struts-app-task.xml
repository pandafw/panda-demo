<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="struts-app-task" namespace="/task" extends="struts-app-default">
		<global-results>
			<result name="exception" type="xml"></result>
			<result name="error" type="xml"></result>
			<result name="input" type="xml"></result>
			<result name="success" type="xml">time, running, count, total, level, status</result>
		</global-results>

		<action name="ping" class="panda.exts.struts2.actions.PingAction"/>
		<action name="upload_cleanup" class="panda.exts.struts2.actions.UploadFileCleanupAction"/>
	</package>
</struts>
