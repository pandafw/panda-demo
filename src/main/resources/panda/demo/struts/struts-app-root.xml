<struts>
	<package name="struts-app-root" namespace="/" extends="struts-app-default">
		<action name="index" class="nuts.demo.action.IndexAction">
			<result name="success" type="freemarker">/index.ftl</result>
		</action>

		<action name="themes" class="nuts.demo.action.SuccessAction">
			<result name="success" type="freemarker">/themes.ftl</result>
		</action>

		<action name="languages" class="nuts.demo.action.SuccessAction">
			<result name="success" type="freemarker">/languages.ftl</result>
		</action>

		<action name="sampledate_*" class="nuts.demo.action.sampledate.SampleDateAction" method="{1}">
			<result name="success" type="freemarker">/nuts/demo/action/sampledate/sampledate.ftl</result>
		</action>
		
		<action name="samplefile_*" class="nuts.demo.action.sample.SampleFileExAction" method="{1}">
			<result name="success" type="freemarker">/nuts/demo/action/samplefile/samplefile.ftl</result>
		</action>
		
		<action name="samplejoin_*" class="nuts.demo.action.samplejoin.SampleJoinAction" method="{1}">
			<result name="success" type="freemarker">/nuts/demo/action/samplejoin/samplejoin.ftl</result>
		</action>
		
		<action name="sampletags_*" class="nuts.demo.action.sampletags.SampleTagsAction" method="{1}">
			<result name="success" type="freemarker">/nuts/demo/action/sampletags/sampletags.ftl</result>
		</action>
		
		<action name="sampleunique_*" class="nuts.demo.action.sampleunique.SampleUniqueAction" method="{1}">
			<result name="success" type="freemarker">/nuts/demo/action/sampleunique/sampleunique.ftl</result>
		</action>
		
		<action name="cronjobs" class="nuts.aems.action.tools.CronJobsAction">
			<result name="input" type="freemarker">/nuts/aems/action/tools/CronJobs.ftl</result>
			<result name="success" type="freemarker">/nuts/aems/action/tools/CronJobs.ftl</result>
		</action>

		<action name="dataimp" class="nuts.exts.struts2.actions.DataImportAction">
			<result name="input" type="freemarker">/nuts/exts/struts2/actions/DataImport.ftl</result>
		</action>

		<action name="pdf" class="nuts.demo.action.Html2PdfExAction">
			<result name="input" type="freemarker">/nuts/exts/struts2/actions/Html2Pdf.ftl</result>
		</action>

		<action name="ndfsfile_*" class="nuts.demo.action.NdfsFileExAction" method="{1}">
			<result name="success" type="freemarker">/nuts/aems/action/ndfsfile/ndfsfile.ftl</result>
		</action>

		<action name="ognleval" class="nuts.aems.action.tools.OgnlEvaluateAction">
			<result name="input" type="freemarker">/nuts/aems/action/tools/OgnlEvaluate.ftl</result>
			<result name="success" type="xml">expr, value</result>
		</action>

		<action name="sqlexec" class="nuts.aems.action.tools.SqlExecuteAction">
			<result name="input" type="freemarker">/nuts/aems/action/tools/SqlExecute.ftl</result>
		</action>

		<action name="error_*" class="nuts.demo.action.sample.ErrorRaiseAction" method="{1}">
			<result name="input" type="freemarker">/nuts/demo/action/sample/error.ftl</result>
			<result name="success" type="freemarker">/nuts/demo/action/sample/error.ftl</result>
		</action>

		<action name="debug_*" class="nuts.demo.action.sample.DebugAction" method="{1}">
			<result name="success" type="freemarker">/nuts/exts/struts2/views/debug.ftl</result>
			<result name="json" type="json">headers, params</result>
			<result name="xml" type="xml">headers, params</result>
		</action>
	</package>
</struts>
