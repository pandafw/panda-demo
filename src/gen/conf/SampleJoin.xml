<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="panda.tool.codegen" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.github.com/pandawind/panda-repo/master/com/pandawind/panda-tool/1.0.0/panda-codegen-module.xsd">
	<include>codegen.properties</include>

	<!-- entity -->
	<entity name="${entity.package}.SampleJoin" baseBeanClass="${entity.baseBeanClass}" baseQueryClass="${entity.baseQueryClass}" trimString="${entity.trimString}" identity="id" identityStart="1001">
		<property name="id" type="Long" notNull="true" primaryKey="true"/>
		<property name="tagsId" type="Long" notNull="true" foreignEntity="SampleTags"/>
		<property name="tagsName" type="String" joinName="TN" joinEntity="SampleTags" joinField="name" joinKeys="tagsId" joinRefs="id"/>
		<property name="fileId" type="Long" notNull="true" foreignKey="FILE" foreignEntity="SampleFile"/>
		<property name="fileName" type="String" joinName="TF" joinEntity="SampleFile" joinField="name" joinKeys="fileId" joinRefs="id"/>
	</entity>

	<!-- action -->
	<action name="action.SampleJoin" entity="${entity.package}.SampleJoin" trimString="${action.trimString}" dataFieldName="${action.dataFieldName}" dataListFieldName="${action.dataListFieldName}">
		<list name="basicList">
			<column name="id" sortable="true" link="true">
				<filter type="number"/>
			</column>
			<column name="tagsId" hidden="true" sortable="true">
				<filter type="number"/>
			</column>
			<column name="tagsName" sortable="true">
				<filter type="string"/>
			</column>
			<column name="fileId" hidden="true" sortable="true">
				<filter type="number"/>
			</column>
			<column name="fileName" sortable="true">
				<filter type="string"/>
			</column>

			<param name="toolbar" value="@refresh"/>
			<param name="actions" value="@insert copy update delete"/>
			<param name="options" value="bdelete ^print:list_print ^csv:list_csv ^json:/json/samplejoin_list ^xml:/xml/samplejoin_list @^${pdf.action}:list_print"/>
			<param name="buttons" value="*list"/>
		</list>
		<input name="basicInput" theme="${input.theme}">
			<field name="id">
				<editTag name="${tag.viewfield}"/>
			</field>
			<field name="tagsId" required="true">
				<editTag name="${tag.triggerfield}">
					<param name="maxlength" value="${tag.longfield.maxlength}"/>
					<param name="size" value="${tag.longfield.size}"/>
					<param name="~popup" value="{'action':'sampletags_list_popup','fields':{'tagsId':'id', 'tagsName':'name'}}"/>
				</editTag>
			</field>
			<field name="tagsName">
				<editTag name="${tag.viewfield}"/>
			</field>
			<field name="fileId" required="true">
				<editTag name="${tag.triggerfield}">
					<param name="maxlength" value="${tag.longfield.maxlength}"/>
					<param name="size" value="${tag.longfield.size}"/>
					<param name="~popup" value="{'action':'samplefile_list_popup','fields':{'fileId':'id', 'fileName':'name'}}"/>
				</editTag>
			</field>
			<field name="fileName">
				<editTag name="${tag.viewfield}"/>
			</field>
			<param name="toolbar" value="%^print @^${pdf.action}:print *list"/>
			<param name="actions" value="%update %copy insert %delete *list"/>
		</input>
	</action>
	<action name="samplejoin" extend="action.SampleJoin" actionClass="${action.package}.samplejoin.SampleJoinAction" actionBaseClass="${action.baseClass}" generate="true">
		<list name="list" extend="basicList" template="${template.list}" generate="true"/>
		<list name="list_csv" extend="basicList" template="${template.list_csv}" generate="true"/>
		<list name="list_print" extend="basicList" template="${template.list_print}" generate="true"/>
		<list name="bdelete" extend="basicList" template="${template.bdelete}" generate="true"/>
		<input name="view" extend="basicInput" template="${template.view}" generate="true">
			<param name="toolbar" value="@refresh %^print @^${pdf.action}:print list"/>
		</input>
		<input name="print" extend="basicInput" template="${template.print}" generate="true"/>
		<input name="copy" extend="basicInput" template="${template.copy}" generate="true"/>
		<input name="insert" extend="basicInput" template="${template.insert}" generate="true"/>
		<input name="update" extend="basicInput" template="${template.update}" generate="true"/>
		<input name="delete" extend="basicInput" template="${template.delete}" generate="true">
			<param name="actions" value="*list"/>
		</input>
	</action>

	<!-- resource -->
	<resource>
		<entity name="${entity.package}.SampleJoin">
			<property name="id" label="ID"/>
			<property name="tagsId" label="TAGS ID"/>
			<property name="tagsName" label="TAGS Name"/>
			<property name="fileId" label="FILE ID"/>
			<property name="fileName" label="FILE Name"/>
		</entity>
		<action actionClass="${action.package}.samplejoin.SampleJoinAction" title="JOIN Sample"/>
	</resource>
	<resource locale="ja">
		<entity name="${entity.package}.SampleJoin">
			<property name="id" label="ID"/>
			<property name="tagsId" label="TAGサンプルID"/>
			<property name="tagsName" label="TAGサンプル名"/>
			<property name="fileId" label="FILEサンプルID"/>
			<property name="fileName" label="FILEサンプル名"/>
		</entity>
		<action actionClass="${action.package}.samplejoin.SampleJoinAction" title="JOINサンプル"/>
	</resource>
	<resource locale="zh">
		<entity name="${entity.package}.SampleJoin">
			<property name="id" label="ID"/>
			<property name="tagsId" label="TAG样本ID"/>
			<property name="tagsName" label="TAGサンプル名"/>
			<property name="fileId" label="FILE样本ID"/>
			<property name="fileName" label="FILE样本名"/>
		</entity>
		<action actionClass="${action.package}.samplejoin.SampleJoinAction" title="JOIN样本"/>
	</resource>
</module>
