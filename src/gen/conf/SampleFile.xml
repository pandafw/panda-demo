<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="panda.tool.codegen" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.github.com/pandawind/panda-repo/master/com/pandawind/panda-tool/1.0.0/panda-codegen-module.xsd">
	<include>codegen.properties</include>

	<!-- entity -->
	<entity name="${entity.package}.SampleFile" baseBeanClass="${entity.baseBeanClass}" baseQueryClass="${entity.baseQueryClass}" trimString="${entity.trimString}" identity="id" identityStart="1001">
		<property name="id" type="Long" notNull="true" primaryKey="true"/>
		<property name="name" type="String" size="100" notNull="true" uniqueKey="NAME">
			<validator type="stringlength" message="validation-stringlength">
				<param name="maxLength" value="100"/>
			</validator>
		</property>
		<property name="fileField" type="UploadFile" jdbcType="BLOB" notNull="false">
			<validator type="filelength" message="validation-filelength">
				<param name="maxLength" value="1048576"/>
				<param name="minLength" value="1"/>
			</validator>
		</property>
		<property name="imageField" type="UploadImage" jdbcType="BLOB" notNull="false">
			<validator type="filelength" message="validation-filelength">
				<param name="maxLength" value="1048576"/>
				<param name="minLength" value="1"/>
			</validator>
		</property>
	</entity>

	<!-- action -->
	<action name="action.SampleFile" entity="${entity.package}.SampleFile" trimString="${action.trimString}" dataFieldName="${action.dataFieldName}" dataListFieldName="${action.dataListFieldName}">
		<list name="basicList">
			<column name="id" sortable="true" link="true">
				<filter type="number"/>
			</column>
			<column name="name" sortable="true">
				<filter type="string"/>
			</column>

			<param name="toolbar" value="@refresh"/>
			<param name="actions" value="@insert copy update delete"/>
			<param name="options" value="bdelete ^print:list_print ^csv:list_csv @^${pdf.action}:list_print"/>
			<param name="buttons" value="*list"/>
		</list>
		<input name="basicInput" theme="${ui.input.theme}">
			<field name="id">
				<editTag name="${tag.viewfield}"/>
			</field>
			<field name="name" required="true">
				<editTag name="${tag.textfield}">
					<param name="maxlength" value="100"/>
					<param name="size" value="${tag.textfield.size}"/>
				</editTag>
			</field>
			<field name="fileField">
				<editTag name="${tag.uploader}">
					<param name="size" value="${tag.uploader.size}"/>
					<param name="+uploadAction" value="{'action':'fu','namespace':'/images'}"/>
					<param name="_uploadParam" value="file"/>
					<param name="+dnloadAction" value="{'action':'fd','namespace':'/images'}"/>
					<param name="_dnloadParam" value="fn"/>
					<param name="+defaultLink" value="{'action':'sf','namespace':'/images','params':{'id':'.id'}}"/>
					<param name="_defaultText" value="&lt;@n.text name=&quot;label-attachment&quot;/&gt;"/>
				</editTag>
			</field>
			<field name="imageField">
				<editTag name="${tag.uploader}">
					<param name="size" value="${tag.uploader.size}"/>
					<param name="+uploadAction" value="{'action':'iu','namespace':'/images'}"/>
					<param name="_uploadParam" value="image"/>
					<param name="+dnloadAction" value="{'action':'id','namespace':'/images'}"/>
					<param name="_dnloadParam" value="fn"/>
					<param name="+defaultLink" value="{'action':'si','namespace':'/images','params':{'id':'.id'}}"/>
					<param name="_defaultText" value="&lt;@n.text name=&quot;label-attachment&quot;/&gt;"/>
				</editTag>
			</field>
			<param name="toolbar" value="%^print @^${pdf.action}:print *list"/>
			<param name="actions" value="%update %copy insert %delete *list"/>
		</input>
	</action>
	<action name="samplefile" extend="action.SampleFile" actionClass="${action.package}.samplefile.SampleFileAction" actionBaseClass="${action.baseClass}" generate="true">
		<list name="list" extend="basicList" template="${template.list}" generate="true"/>
		<list name="list_csv" extend="basicList" template="${template.list_csv}" generate="true"/>
		<list name="list_print" extend="basicList" template="${template.list_print}" generate="true"/>
		<list name="list_popup" extend="basicList" template="${template.list_popup}" generate="true"/>
		<list name="bdelete" extend="basicList" template="${template.bdelete}" generate="true"/>
		<input name="view" extend="basicInput" template="${template.view}" generate="true">
			<param name="toolbar" value="@refresh %^print @^${pdf.action}:print list"/>
		</input>
		<input name="print" extend="basicInput" template="${template.print}" generate="true"/>
		<input name="copy" extend="basicInput" template="${template.copy}" generate="true"/>
		<input name="insert" extend="basicInput" template="${template.insert}" generate="true"/>
		<input name="update" extend="basicInput" template="${template.update}" generate="true"/>
		<input name="delete" extend="basicInput" template="${template.delete}" generate="true">
			<param name="toolbar" value="list"/>
			<param name="actions" value="*list"/>
		</input>
	</action>

	<!-- resource -->
	<resource>
		<entity name="${entity.package}.SampleFile">
			<property name="id" label="ID"/>
			<property name="name" label="Name"/>
			<property name="fileField" label="File"/>
			<property name="imageField" label="Image"/>
		</entity>
		<action actionClass="${action.package}.samplefile.SampleFileAction" title="File Sample"/>
	</resource>
	<resource locale="ja">
		<entity name="${entity.package}.SampleFile">
			<property name="id" label="ID"/>
			<property name="name" label="NAME名称"/>
			<property name="fileField" label="ファイル"/>
			<property name="imageField" label="イメージ"/>
		</entity>
		<action actionClass="${action.package}.samplefile.SampleFileAction" title="ファイルサンプル"/>
	</resource>
	<resource locale="zh">
		<entity name="${entity.package}.SampleFile">
			<property name="id" label="ID"/>
			<property name="name" label="NAME名称"/>
			<property name="fileField" label="文件字段"/>
			<property name="imageField" label="图片字段"/>
		</entity>
		<action actionClass="${action.package}.samplefile.SampleFileAction" title="文件样本"/>
	</resource>
</module>
