<!DOCTYPE validators PUBLIC
		"-//Apache Struts//XWork Validator 1.0.3//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="id">
		<field-validator type="conversion">
			<message key="validation-conversion-Long"/>
		</field-validator>
	</field>
	<field name="name">
		<field-validator type="stringlength">
			<param name="maxLength">100</param>
			<message key="validation-stringlength"/>
		</field-validator>
	</field>
	<field name="styleField">
		<field-validator type="constant">
			<param name="list">consts.styleMap</param>
			<message key="validation-constant"/>
		</field-validator>
	</field>
	<field name="boolField">
		<field-validator type="conversion">
			<message key="validation-conversion-Boolean"/>
		</field-validator>
	</field>
	<field name="intField">
		<field-validator type="int">
			<param name="min">0</param>
			<param name="max">888</param>
			<message key="validation-intrange"/>
		</field-validator>
		<field-validator type="conversion">
			<message key="validation-conversion-Integer"/>
		</field-validator>
	</field>
	<field name="decField">
		<field-validator type="decimal">
			<param name="min">0</param>
			<param name="max">9999999999</param>
			<message key="validation-decimalrange"/>
		</field-validator>
		<field-validator type="conversion">
			<message key="validation-conversion-BigDecimal"/>
		</field-validator>
	</field>
	<field name="radioField">
		<field-validator type="constant">
			<param name="list">consts.radioMap</param>
			<message key="validation-constant"/>
		</field-validator>
	</field>
	<field name="selectField">
		<field-validator type="constant">
			<param name="list">consts.selectMap</param>
			<message key="validation-constant"/>
		</field-validator>
	</field>
	<field name="checkField">
		<field-validator type="constant">
			<param name="list">consts.checkMap</param>
			<message key="validation-constant"/>
		</field-validator>
	</field>
	<field name="datetimeField">
		<field-validator type="conversion">
			<message key="validation-conversion-Date"/>
		</field-validator>
	</field>
	<field name="dateField">
		<field-validator type="conversion">
			<message key="validation-conversion-Date"/>
		</field-validator>
	</field>
	<field name="timeField">
		<field-validator type="conversion">
			<message key="validation-conversion-Date"/>
		</field-validator>
	</field>
	<field name="htmlField">
		<field-validator type="stringlength">
			<param name="maxLength">1000</param>
			<message key="validation-stringlength"/>
		</field-validator>
	</field>
	<field name="bbcodeField">
		<field-validator type="stringlength">
			<param name="maxLength">1000</param>
			<message key="validation-stringlength"/>
		</field-validator>
	</field>
</validators>
